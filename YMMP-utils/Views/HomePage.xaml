<Page x:Class="YMMP_utils.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YMMP_utils.Views"
      mc:Ignorable="d"
      
      xmlns:vm="clr-namespace:YMMP_utils.ViewModels"
      
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"       
      
      xmlns:lex="http://wpflocalizeextension.codeplex.com"
      lex:ResxLocalizationProvider.DefaultAssembly="YMMP-utils"
      lex:ResxLocalizationProvider.DefaultDictionary="Resources"

      
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Page.DataContext>
        <vm:HomePageViewModel/>
    </Page.DataContext>
    
    <Grid Margin="24,24,24,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- ヘッダー部分（スクロールしない） -->
        <ikw:SimpleStackPanel Grid.Row="0">
            <TextBlock FontSize="24" FontWeight="bold" Text="{lex:Loc Key=home_header_title}"/>
            <TextBlock Text="{lex:Loc Key=home_header_desc}"/>
        </ikw:SimpleStackPanel>
        <!-- スクロールする部分 -->
        <ui:ScrollViewerEx Grid.Row="1" Margin="0,16,0,0" Padding="0,0,0,16">
            <ikw:SimpleStackPanel Spacing="24" Margin="0,0,0,16">
                <ikw:SimpleStackPanel Spacing="4">
                    <TextBlock Text="{lex:Loc Key=home_stg}" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ui:SettingsCard
                        x:Name="pathCard"
                        Description="{lex:Loc Key=home_stg_path_desc}"
                        Header="{lex:Loc Key=home_stg_path_header}" IsEnabled="True"
                        HorizontalContentAlignment="Stretch">
                        <ui:SettingsCard.HeaderIcon>
                            <ui:FontIcon Glyph="&#xE8B7;"/>
                        </ui:SettingsCard.HeaderIcon>
                        <TextBox Width="300"/>
                    </ui:SettingsCard>
                    <ui:SettingsCard
                        x:Name="updatesCard"
                        Description="{lex:Loc Key=home_stg_upd_desc}"
                        Header="{lex:Loc Key=home_stg_upd_header}" IsEnabled="True">
                        <ui:SettingsCard.HeaderIcon>
                            <ui:FontIcon Glyph="&#xE895;"/>
                        </ui:SettingsCard.HeaderIcon>
                        <Button Content="{lex:Loc Key=home_stg_upd_btn}"/>
                    </ui:SettingsCard>
                    <ui:SettingsCard
                        x:Name="languageCard"
                        Description="{lex:Loc Key=home_stg_lang_desc}"
                        Header="{lex:Loc Key=home_stg_lang_header}" IsEnabled="True">
                        <ui:SettingsCard.HeaderIcon>
                            <ui:FontIcon Glyph="&#xE909;"/>
                        </ui:SettingsCard.HeaderIcon>
                        <ComboBox
                            SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}">
                            <ComboBoxItem Content="English" Tag="en-US" IsSelected="true"/>
                            <ComboBoxItem Content="日本語" Tag="ja-JP"/>
                        </ComboBox>
                    </ui:SettingsCard>
                </ikw:SimpleStackPanel>
                <ikw:SimpleStackPanel Spacing="4">
                    <TextBlock Text="{lex:Loc Key=home_abt}" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ui:SettingsExpander Description="{lex:Loc Key=home_abt_info_desc}"
                        Header="{lex:Loc Key=home_abt_info_header}">
                        <ui:SettingsExpander.HeaderIcon>
                            <Image Width="20" Height="20" RenderOptions.BitmapScalingMode="HighQuality"/>
                        </ui:SettingsExpander.HeaderIcon>
                        <TextBlock Text="0.0.1" />
                        <ui:SettingsExpander.Items>
                            <ui:SettingsCard HorizontalContentAlignment="Left"
                            ContentAlignment="Left">
                                <StackPanel Margin="-12,0,0,0" Orientation="Vertical">
                                    <ui:HyperlinkButton Content="GitHub" />
                                </StackPanel>
                            </ui:SettingsCard>
                        </ui:SettingsExpander.Items>
                    </ui:SettingsExpander>
                    <!--<ui:HyperlinkButton Margin="0,8,0,0" Content="Send feedback"/>-->
                </ikw:SimpleStackPanel>
                <TextBlock Text="{lex:Loc Key=home_LLM}"/>
            </ikw:SimpleStackPanel>
        </ui:ScrollViewerEx>
    </Grid>
</Page>
